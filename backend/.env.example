# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tracklib_db"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server
PORT=3000
NODE_ENV=development
BACKEND_URL=http://localhost:3000

# JWT Secret (Change this in production!)
JWT_SECRET=bu-cok-gizli-bir-anahtar-ve-asla-degismemeli-12345

# ============================================
# TEK KULLANICI AUTH (Dashboard Login)
# ============================================
